{{! below is the carousel on the homepage }}
<div id="myCarousel" class="row my-5">
  <div
    id="carouselExampleIndicators"
    class="carousel slide col-12"
    data-ride="carousel"
  >
    <ol class="carousel-indicators">
      <li
        data-target="#carouselExampleIndicators"
        data-slide-to="0"
        class="active"
      ></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <a
          href="https://boardgamegeek.com/boardgame/187719/banner-saga-warbands"
          target="_blank"
        ><img
            src="/images/bannerSagaBanner.jpg"
            id="banner"
            class="d-block w-100"
            alt="a carousel of rotating game images, slide one"
          /></a>
      </div>
      <div class="carousel-item">
        <a
          href="https://www.miniaturemarket.com/petcw-cg.html"
          target="_blank"
        ><img
            src="/images/cthuluBanner.png"
            id="banner"
            class="d-block w-100"
            alt="a carousel of rotating game images, slide two"
          /></a>
      </div>
      <div class="carousel-item">
        <a
          href="https://www.miniaturemarket.com/cb72600.html"
          target="_blank"
        ><img
            src="/images/40kBanner.jpg"
            id="banner"
            class="d-block w-100"
            alt="a carousel of rotating game images, slide three"
          /></a>
      </div>
    </div>
    <a
      class="carousel-control-prev"
      href="#carouselExampleIndicators"
      role="button"
      data-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a
      class="carousel-control-next"
      href="#carouselExampleIndicators"
      role="button"
      data-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

{{! below is the handlebars for the articles on the main page }}
<div class="row my-5">
  {{#each articles as |article|}}
    <div
      class="card border-0 col-xl-3 col-lg-4 col-md-6 col-sm-12 flex-row justify-content-center align-items-center"
    >
      <a
        class="text-decoration-none card-body d-flex flex-column justify-content-center align-items-center"
        href="/article/{{id}}"
      >
        <img
          class="images card-img-top"
          src="/images/{{article.images.0.filename}}"
          alt="{{article.title}}"
        />
        <h3 id="homepage-icon-titles" class="text-start card-title mt-2">
          {{article.title}}
        </h3>
      </a>
    </div>
  {{/each}}
</div>

